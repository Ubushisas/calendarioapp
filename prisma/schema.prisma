// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Patient {
  id           String        @id @default(cuid())
  name         String
  email        String?       @unique
  phone        String        @unique
  notes        String?
  preferences  String?       // JSON field for treatment preferences
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  appointments Appointment[]
  messages     WhatsAppMessage[]
}

model Service {
  id           String        @id @default(cuid())
  name         String
  duration     Int           // duration in minutes
  price        Float
  description  String?
  color        String?       // hex color for calendar display
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  appointments Appointment[]
}

model Appointment {
  id                String   @id @default(cuid())
  patientId         String
  patient           Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  serviceId         String
  service           Service  @relation(fields: [serviceId], references: [id])
  startTime         DateTime
  endTime           DateTime
  status            String   @default("pending") // pending, confirmed, completed, cancelled, no-show
  notes             String?
  googleEventId     String?  @unique // Link to Google Calendar event
  depositPaid       Boolean  @default(false)
  depositAmount     Float?
  reminderSent24h   Boolean  @default(false)
  reminderSent1h    Boolean  @default(false)
  confirmationSent  Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  messages          WhatsAppMessage[]
}

model Settings {
  id              String  @id @default(cuid())
  bufferTime      Int     @default(15) // minutes between appointments
  calendarEnabled Boolean @default(true)
  workingHours    String  // JSON: {"mon": {"start": "09:00", "end": "18:00"}}
  adminPassword   String  // hashed password
  updatedAt       DateTime @updatedAt
}

model WhatsAppMessage {
  id            String      @id @default(cuid())
  twilioSid     String      @unique // Twilio message SID
  patientId     String?
  patient       Patient?    @relation(fields: [patientId], references: [id], onDelete: SetNull)
  appointmentId String?
  appointment   Appointment? @relation(fields: [appointmentId], references: [id], onDelete: SetNull)
  phoneNumber   String      // WhatsApp number
  direction     String      // inbound or outbound-api
  body          String      // Message content
  status        String      // queued, sent, delivered, failed, received
  messageType   String?     // confirmation, reminder-24h, reminder-1h, manual, customer-response
  errorCode     String?
  errorMessage  String?
  sentAt        DateTime?
  deliveredAt   DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([phoneNumber])
  @@index([patientId])
  @@index([appointmentId])
  @@index([createdAt])
}
